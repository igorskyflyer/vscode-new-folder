{
	"name": "new-folder",
	"displayName": "New Folder",
	"publisher": "igordvlpr",
	"description": "Provides a \"New Folder\" view in the Explorer and a command in the Command Palette.",
	"version": "1.0.4",
	"engines": {
		"vscode": "^1.57.0"
	},
	"galleryBanner": {
		"color": "#EC9425",
		"theme": "dark"
	},
	"icon": "assets/icon.png",
	"categories": [
		"Other"
	],
	"keywords": [
		"folder",
		"explorer",
		"igordvlpr"
	],
	"extensionKind": [
		"ui"
	],
	"activationEvents": [
		"onCommand:new-folder.new"
	],
	"main": "./extension.js",
	"contributes": {
		"commands": [
			{
				"command": "new-folder.new",
				"title": "Create a New Folder..."
			}
		],
		"keybindings": [
			{
				"command": "new-folder.new",
				"key": "Ctrl+Alt+N",
				"mac": "Cmd+Alt+N"
			}
		],
		"viewsWelcome": [
			{
				"view": "explorer",
				"contents": "[New Folder...](command:new-folder.new)\nYou can create a new local folder.",
				"when": "workbenchState == empty"
			}
		],
		"configuration": [
			{
				"title": "New Folder",
				"properties": {
					"new-folder.autoOpen": {
						"type": "boolean",
						"default": true,
						"description": "Automatically open the newly created folder."
					},
					"new-folder.projectRoot": {
						"type": "string",
						"default": "",
						"description": "Root directory path where you keep your projects. This is the path to use as the initial folder for the New Folder command.\n\nOn Windows you can use either forward or back slashes in the path, thanks to uPath."
					}
				}
			}
		]
	},
	"devDependencies": {
		"@types/node": "14.x",
		"@types/vscode": "^1.57.0"
	},
	"dependencies": {
		"@igor.dvlpr/upath": "^1.0.5"
	},
	"license": "SEE LICENSE IN LICENSE.txt",
	"bugs": {
		"url": "https://github.com/igorskyflyer/vscode-new-folder/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/igorskyflyer/vscode-new-folder.git"
	},
	"homepage": "https://github.com/igorskyflyer/vscode-new-folder/blob/main/README.md"
}
